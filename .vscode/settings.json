{
  "editor.formatOnSave": true,
  "stylelint.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },
  "stylelint.snippet": ["css", "scss", "vue"],
  "stylelint.validate": ["css", "scss", "vue"],
  "cssVariables.lookupFiles": ["**/*.css", "**/*.scss"],
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "folderTemplates.structures": [
    {
      "name": "Feature template",
      "omitParentDirectory": true,
      "structure": [
        {
          "fileName": "<FTName>",
          "template": "EmptyDirectory"
        },
        {
          "fileName": "<FTName>/index.ts",
          "template": "// Copyright 2024 StarfleetAI\n // SPDX-License-Identifier: Apache-2.0\n\n export * from './ui'; \n export * from './lib' \n export * from './api' \n export * from './model' \n"
        },
        {
          "fileName": "<FTName>/ui/index.ts",
          "template": "// Copyright 2024 StarfleetAI\n // SPDX-License-Identifier: Apache-2.0\n\n"
        },
        {
          "fileName": "<FTName>/lib/index.ts",
          "template": "// Copyright 2024 StarfleetAI\n // SPDX-License-Identifier: Apache-2.0\n\n"
        },
        {
          "fileName": "<FTName>/api/index.ts",
          "template": "// Copyright 2024 StarfleetAI\n // SPDX-License-Identifier: Apache-2.0\n\n"
        },
        {
          "fileName": "<FTName>/model/index.ts",
          "template": "// Copyright 2024 StarfleetAI\n // SPDX-License-Identifier: Apache-2.0\n\n"
        }
      ]
    }
  ]
}
