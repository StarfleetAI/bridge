{
  "name": "bridge-ui",
  "private": true,
  "type": "module",
  "lint-staged": {
    "*.{ts,vue}": "bun run --bun lint:quiet"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "lint": "eslint --ext .vue,.ts ./ --no-fix",
    "lint:quiet": "eslint --ext .vue,.ts ./ --no-fix --quiet",
    "lint:fix": "eslint --ext .vue,.ts ./ --fix",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "ts-check": "nuxi typecheck .",
    "test:unit": "vitest run",
    "stylelint": "stylelint \"./**/*.{vue,scss}\" --color --cache --quiet-deprecation-warnings",
    "stylelint-fix": "stylelint \"./**/*.{vue,scss}\" --color --cache --quiet-deprecation-warnings --fix",
    "format-check": "prettier . --check",
    "format-fix": "prettier . --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@nuxtjs/tailwindcss": "^6.11.3",
    "@types/highlightjs": "^9.12.6",
    "@types/prismjs": "^1.26.3",
    "eslint": "^8.56.0",
    "eslint-config-aurora-vue": "^1.0.4",
    "highlightjs-copy": "^1.0.5",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "nuxt": "^3.10.1",
    "oidc-client-ts": "^3.0.0",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended-scss": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "5.3.3",
    "vue": "^3.4.16",
    "vue-router": "^4.2.5",
    "vue-tsc": "1.8.27"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "@tanstack/vue-query": "5.18.1",
    "@tauri-apps/api": "^1.5.3",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vueuse/core": "10.7.2",
    "@vueuse/nuxt": "10.7.2",
    "dayjs": "^1.11.10",
    "dayjs-nuxt": "2.1.9",
    "highlight.js": "^11.9.0",
    "marked": "^12.0.0",
    "marked-highlight": "^2.1.1",
    "nuxt-typed-router": "^3.5.1",
    "pinia": "^2.1.7",
    "prismjs": "^1.29.0",
    "vue-prism-editor": "alpha"
  }
}
